
# Sets $(dirs_engine_engine) to a list of all directories containing sources
# for the C++ calculation engine, excluding any specific external access
# components.
#
# Sets $(dirs_engine_jni) to a list of all directories containing sources for
# the component of the engine that allows external access from Java
# using JNI.
#
# Sets $(engine_misc_src_mask) to a file mask of all miscellaneous files to be
# included in the source archive.  Files ending in .cpp or .h and residing
# in any of the above directories will already be placed in the source
# archive and should not be included in this list.
#
# All locations must be relative to this directory.

dirs_engine_engine = \
	engine/algebra \
	engine/angle \
	engine/census \
	engine/file \
	engine/foreign \
	engine/maths \
	engine/packet \
	engine/progress \
	engine/property \
	engine/split \
	engine/subcomplex \
	engine/surfaces \
	engine/triangulation \
	engine/utilities \
	engine

dirs_engine_jni = \
	jni/registry \
	jni/engine/algebra \
	jni/engine/angle \
	jni/engine/file \
	jni/engine/maths \
	jni/engine/packet \
	jni/engine/progress \
	jni/engine/subcomplex \
	jni/engine/surfaces \
	jni/engine/triangulation \
	jni/engine \
	jni

engine_misc_src_mask = Makefile* findtext doc-files/doc* *.txt \
	engine/census/results.txt

